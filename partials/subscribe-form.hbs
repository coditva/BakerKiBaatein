<section class="subscribe-form">
    <h3 class="subscribe-form-title">Subscribe to Khadya Samachaar</h3>
    <p class="subscribe-form-description">Get the latest posts, a subscribers-only recipe and much more right in your Inbox!</p>
    <form data-members-form="signup">
        <div class="form-group">
            <input class="subscribe-email" data-members-email placeholder="youremail@example.com" autocomplete="false" />
            <button class="button primary" type="submit">
                <span class="button-content">Subscribe</span>
                <span class="button-loader">{{> "icons/loader"}}</span>
            </button>
        </div>
        <div class="message-success">
            <strong>Great!</strong> Check your inbox and click the link to confirm your subscription.
        </div>
        <div class="message-error">
            <p data-members-error><!-- error message will appear here --></p>
        </div>
    </form>
</section>
